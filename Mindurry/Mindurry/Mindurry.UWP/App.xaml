<Application
    x:Class="Mindurry.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mindurry.UWP"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="PaneButton">
                <Setter Property="Content" Value=""/>
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Width" Value="48"/>
                <Setter Property="Height" Value="48"/>
            </Style>
            <Style TargetType="ToggleSwitch">
                <Setter Property="OffContent" Value="Off" />
                <Setter Property="OnContent" Value="On " />
                <!--<Setter Property="Margin" Value="{ThemeResource PivotItemMargin}"/>-->
            </Style>
        </ResourceDictionary>
    </Application.Resources>

</Application>
