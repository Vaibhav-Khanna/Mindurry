<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mindurry.Pages.AcquereursPage">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Acquereurs}" InputTransparent="True" Margin="0,15,0,0">
            <ListView.Header>
                <Grid BackgroundColor="White">
                    <Grid Padding="30,10,0,10" >
                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <ResourceDictionary>
                                <Style TargetType="Label">
                                    <Setter Property="FontAttributes" Value="Bold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </ResourceDictionary>
                        </Grid.Resources>
                        <Label Text="N°" Grid.Column="0"/>
                        <Label Text="Type" Grid.Column="1"/>
                        <Label Text="Client" Grid.Column="2"/>
                        <Label Text="Stade" Grid.Column="3"/>
                        <Label Text="Prix" Grid.Column="4"/>
                    </Grid>
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource GrayDivider}" VerticalOptions="End"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="30,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.Resources>
                                <ResourceDictionary>
                                    <Style TargetType="Label">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="VerticalOptions" Value="Center"/>
                                    </Style>
                                </ResourceDictionary>
                            </Grid.Resources>
                            <Label Text="{Binding No}" Grid.Column="0"/>
                            <Label Text="{Binding Type}" Grid.Column="1"/>
                            <Label Text="{Binding Client}" Grid.Column="2"/>
                            <Label Text="{Binding Stade}" Grid.Column="3"/>
                            <Label Text="{Binding Prix, StringFormat='{0:#,##0}€'}" Grid.Column="4"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>